{
  "name": "siera-bet-easy",
  "version": "0.1.0",
  "private": true,
  "sideEffects": false,
  "repository": {
    "url": "https://github.com/devendraprasad1984/siera_ai_fe_tech_challenge.git"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.26",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "antd": "^4.19.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.2.2",
    "react-scripts": "5.0.0",
    "redux": "^4.1.2",
    "redux-thunk": "^2.4.1",
    "serve": "^13.0.2",
    "typescript": "^4.6.2",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^26.6.0",
    "craco": "^0.0.3",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.2",
    "eslint-plugin-import": "^2.24.2",
    "husky": "^7.0.0",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.0"
  },
  "homepage": "bets/",
  "scripts": {
    "start": "serve -s build/bets",
    "eject": "react-scripts eject",
    "dev": "react-scripts start",
    "build": "BUILD_PATH='./build/bets' react-scripts build",
    "lint": "lint-staged",
    "test": "CI=false react-scripts test --verbose --env=jsdom --findRelatedTests=**/*test.{js,ts,tsx,jsx} -u",
    "testx": "CI=true react-scripts test --verbose --env=jsdom --watchAll=false --findRelatedTests=**/*test.{js,ts,tsx,jsx} --bail --forceExit -u",
    "testc": "npm run test -- --coverage",
    "command": "npm lint && npm testg",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint \"**/*.{js,jsx,ts,tsx}\" --fix",
      "prettier --check --write src",
      "git add -A ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "if [ $(git rev-parse --abbrev-ref HEAD) = master ]; then echo \"\nâŒ Don't push to the master branch!\n\"; exit 1; fi"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    }
  }
}
